{
  "permissions": {
    "allow": [
      "Bash(*)",
      "Write(*)",
      "Edit(*)",
      "NotebookEdit(*)",
      "Task(*)",
      "EnterPlanMode",
      "ExitPlanMode",
      "EnterWorktree(*)",
      "WebFetch(*)",
      "mcp__claude-in-chrome__*",
      "mcp__github__*",
      "mcp__memory__*",
      "mcp__gmail__*",
      "mcp__sequential-thinking__*",
      "mcp__railway__*",
      "mcp__cloudflare-docs__*",
      "mcp__context7__*",
      "mcp__magic__*",
      "mcp__desktop-commander__*",
      "mcp__filesystem__*",
      "mcp__plugin_firebase_firebase__*",
      "mcp__plugin_playwright_playwright__*",
      "mcp__plugin_context7_context7__*",
      "mcp__plugin_greptile_greptile__*",
      "mcp__claude_ai_Canva__*",
      "mcp__claude_ai_Cloudflare_Developer_Platform__*",
      "mcp__claude_ai_Figma__*",
      "mcp__claude_ai_Gamma__*",
      "mcp__claude_ai_Gmail__*",
      "mcp__claude_ai_Google_Calendar__*",
      "mcp__claude_ai_Hugging_Face__*",
      "mcp__claude_ai_Invideo__*",
      "mcp__claude_ai_Learning_Commons_Knowledge_Graph__*",
      "mcp__claude_ai_Make__*",
      "mcp__claude_ai_Notion__*",
      "mcp__claude_ai_Supabase__*",
      "mcp__claude_ai_Vercel__*",
      "mcp__claude_ai_Zapier__*"
    ],
    "defaultMode": "default"
  },
  "enabledPlugins": {
    "everything-claude-code@everything-claude-code": true,
    "agent-sdk-dev@claude-plugins-official": true,
    "asana@claude-plugins-official": true,
    "atlassian@claude-plugins-official": true,
    "circleback@claude-plugins-official": false,
    "clangd-lsp@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "coderabbit@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "csharp-lsp@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "figma@claude-plugins-official": true,
    "firebase@claude-plugins-official": true,
    "firecrawl@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "gitlab@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "greptile@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "huggingface-skills@claude-plugins-official": true,
    "jdtls-lsp@claude-plugins-official": true,
    "kotlin-lsp@claude-plugins-official": true,
    "laravel-boost@claude-plugins-official": true,
    "learning-output-style@claude-plugins-official": true,
    "playground@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "posthog@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "qodo-skills@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "semgrep@claude-plugins-official": true,
    "sentry@claude-plugins-official": true,
    "serena@claude-plugins-official": true,
    "skill-creator@claude-plugins-official": true,
    "slack@claude-plugins-official": false,
    "sonatype-guide@claude-plugins-official": true,
    "stripe@claude-plugins-official": true,
    "supabase@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "vercel@claude-plugins-official": true,
    "ui-ux-pro-max@ui-ux-pro-max-skill": true
  },
  "autoUpdatesChannel": "latest",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$HOME/.claude/hooks/secret-scanner.py\""
          }
        ],
        "description": "Scan for hardcoded secrets before writing files or committing"
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$HOME/.claude/hooks/git-guard.py\""
          }
        ],
        "description": "Git guard: block dangerous commands, enforce conventional commits, protect branches"
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/lock-file-protector.js\""
          }
        ],
        "description": "Block direct modifications to dependency lock files"
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ -f \"$CLAUDE_TOOL_FILE_PATH\" ]]; then cp \"$CLAUDE_TOOL_FILE_PATH\" \"$CLAUDE_TOOL_FILE_PATH.backup.$(date +%s)\" 2>/dev/null || true; fi"
          }
        ],
        "description": "Create backup before editing files"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$HOME/.claude/hooks/atum-post-write.py\""
          }
        ],
        "description": "ATUM: hash and register files in audit store after write/edit"
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$HOME/.claude/hooks/atum-compliance-check.py\""
          }
        ],
        "description": "ATUM: show compliance summary after git commit"
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/auto-test-runner.js\""
          }
        ],
        "description": "Suggest running related tests after source file modifications"
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$HOME/.claude/hooks/dependency-checker.py\""
          }
        ],
        "description": "Auto-audit dependencies when package.json/requirements.txt/Cargo.toml modified"
      },
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.js || \"$CLAUDE_TOOL_FILE_PATH\" == *.ts || \"$CLAUDE_TOOL_FILE_PATH\" == *.jsx || \"$CLAUDE_TOOL_FILE_PATH\" == *.tsx || \"$CLAUDE_TOOL_FILE_PATH\" == *.json || \"$CLAUDE_TOOL_FILE_PATH\" == *.css || \"$CLAUDE_TOOL_FILE_PATH\" == *.html || \"$CLAUDE_TOOL_FILE_PATH\" == *.sol ]]; then npx prettier --write \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.py ]]; then black \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.go ]]; then gofmt -w \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.rs ]]; then rustfmt \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.php ]]; then php-cs-fixer fix \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; fi"
          }
        ],
        "description": "Auto-format files after edit (prettier/black/gofmt/rustfmt/php-cs-fixer)"
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/post-commit-quality-gate.js\""
          }
        ],
        "description": "Suggest quality checks (lint, typecheck, test) after git commit"
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/loop-detector.js\""
          }
        ],
        "description": "Detect repeated identical tool calls (loop prevention)"
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/session-memory.js\""
          }
        ],
        "description": "Auto-save session summary to daily memory file"
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$HOME/.claude/hooks/atum-session-start.py\""
          }
        ],
        "description": "ATUM: auto-detect and initialize project tracking"
      }
    ]
  }
}